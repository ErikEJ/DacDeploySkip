<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net8.0;net10.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>DacDeploySkip</AssemblyName>
    <Copyright>Copyright © ErikEJ 2025 - https://github.com/ErikEJ/DacDeploySkip</Copyright>
    <PackAsTool>true</PackAsTool>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <ToolCommandName>dacdeployskip</ToolCommandName>
    <PackageId>ErikEJ.DacFX.DacDeploySkip</PackageId>
    <Description>Dacpac deployment skipper</Description>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <PackageVersion>1.0.0</PackageVersion>
    <InformationalVersion>1.0.0</InformationalVersion>
    <Version>1.0.0</Version>
    <RepositoryUrl>https://github.com/ErikEJ/DacDeploySkip</RepositoryUrl>
    <PackageProjectUrl>https://github.com/ErikEJ/DacDeploySkip</PackageProjectUrl>
    <Authors>ErikEJ</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryType>git</RepositoryType>
    <Company>ErikEJ</Company>
    <PackageReleaseNotes>Initial release</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../readme.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.SqlClient" Version="6.1.2" />
  </ItemGroup>

</Project>
